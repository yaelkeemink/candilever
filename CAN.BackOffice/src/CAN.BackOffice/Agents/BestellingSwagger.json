      "type": "object",
      "properties": {
        "bestellingnummer": {
          "format": "int64",
          "type": "integer"
        },
        "klantnummer": {
          "format": "int64",
          "type": "integer"
        },
        "volledigeNaam": { "type": "string" },
        "postcode": { "type": "string" },
        "adres": { "type": "string" },
        "huisnummer": { "type": "string" },
        "land": { "type": "string" },
        "artikelen": {
          "type": "array",
          "items": { "$ref": "#/definitions/ArtikelDTO" }
        },
        "bestelDatum": {
          "format": "date-time",
          "type": "string"
        },
        "status": {
          "format": "int32",
          "enum": [ 0, 100 ],
          "type": "integer"
        }
      }
    },
    "ArtikelDTO": {
      "required": [ "naam", "prijs", "aantal" ],
      "type": "object",
      "properties": {
        "id": {
          "format": "int64",
          "type": "integer"
        },
        "artikelnummer": {
          "format": "int64",
          "type": "integer"
        },
        "naam": { "type": "string" },
        "prijs": { "type": "string" },
        "aantal": {
          "format": "int32",
          "type": "integer"
        },
        "leverancier": { "type": "string" },
        "leverancierCode": { "type": "string" }
      }
    },
    "ErrorMessage": {
      "type": "object",
      "properties": {
        "foutType": {
          "format": "int32",
          "enum": [ 10, 20, 30, 40 ],
